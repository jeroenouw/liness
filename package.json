{
  "name": "liness",
  "version": "1.0.0",
  "description": "CLI to calculate amount of lines used in your current project",
  "author": "Jeroen Ouwehand",
  "repository": "https://github.com/jeroenouw/liness",
  "license": "MIT",
  "main": "./lib/index.js",
  "bin": {
    "liness": "bin/liness"
  },
  "keywords": [
    "cli",
    "liness",
    "benchmark",
    "typescript",
    "javascript",
    "nodejs",
    "lines"
  ],
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha src/**/*.spec.ts",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && liness",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "dependencies": {
    "figlet": "^1.3.0",
    "fs-extra": "^9.0.0",
    "kleur": "^3.0.3",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@liftr/tscov": "^1.4.4",
    "@types/chai": "^4.2.11",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^8.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "mocha-junit-reporter": "^1.23.3",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  }
}
